# ======================
# FUNDIFY BACKEND CONFIG
# ======================

# Application
NODE_ENV=development
PORT=4000

# Database (PostgreSQL)
# Production: Get from Neon/Railway
# Connection pooling parameters for production:
# - connection_limit: Max connections (default 10)
# - pool_timeout: Connection timeout in seconds
# - connect_timeout: Initial connection timeout
DATABASE_URL=postgresql://user:password@localhost:5432/fundify?schema=public&connection_limit=10&pool_timeout=20&connect_timeout=10

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRES_IN=7d

# CORS & Frontend
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
EMAIL_FROM=noreply@yourdomain.com

# Stripe Payment (REQUIRED for subscriptions)
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# GitHub OAuth (Optional)
# Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:4000/api/auth/github/callback
